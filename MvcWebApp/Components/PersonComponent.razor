@page "/person"

@*<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />*@
<h3>PersonComponent</h3>

<h3 id="HelloLabel">Hello @APerson.FirstName</h3>
<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="RandomNameChange">Click me</MudButton>
<MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="RandomNameChange">Click me</MudButton>
<MudButton Class="btn-primary" id="randomName" OnClick="RandomNameChange">Click me</MudButton>

@code {
    [Parameter] public PersonViewModel APerson { get; set; } = 
        new PersonViewModel() {FirstName = "Jill" };

    async Task RandomNameChange()
    {
        var random = new Random(DateTime.Now.Millisecond);
        APerson.FirstName = new string[]{"Jon", "Steve", "Soham", "Arjuna"}[random.Next(0, 3)];
    }
}
